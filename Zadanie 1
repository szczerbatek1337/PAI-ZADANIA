<body>
<script type="text/javascript">
var skrypt = confirm("Skrypt polega na pobraniu wartości od ciebie i sprawdzenia czy dany skrypt jest większy od 100 oraz czy jest podzielny przez 3");



var ile = (prompt("Podaj wartość:"));
if(ile > 100 && ile%3==0){
document.write("<font color=green>Liczba " +ile+ " jest wieksza od 100 i jest podzielna przez 3.</font>");
}
else if( ile >100 && ile%3!=0) {
document.write("<font color=lime>Liczba " +ile+ " jest wieksza od 100 i nie dzieli sie przez 3.</font>");
}
else if(ile < 100 && ile%3==0){
document.write("<font color=purple>Liczba " +ile+ " jest mniejsza od 100 i jest podzielna przez 3.</font>");
}
else if(ile < 100 && ile%3!=0){
document.write("<font color=black>Liczba " +ile+ " jest mniejsza od 100 i nie dzieli sie przez 3.</font>");
}
else{
document.write("<font color=red>Wpisz wartosć, ile nie coś innego!!!</font>");
}

</script>
</body>
